package neustadt.mco243.microprocessor;

import java.io.BufferedReader;
import java.io.IOException;

public class Memory {

	private char[] memory;

	public Memory(BufferedReader reader) throws IOException {
		memory = reader.readLine().toCharArray();
	}

	public Memory(String line) {
		memory = line.toCharArray();
	}

	public int toHexadecimal(int index) {
		return 0;
	}

	public int getAddress(int index) {
		StringBuilder builder = new StringBuilder();
		builder.append(memory[index]);
		builder.append(memory[index + 1]);
		int location = Integer.parseInt(builder.toString(), 16);
		return location;

	}

	public String toString() {
		return new String(memory);
	}
	
	public char getChar(int index){
		return memory[index];
	}
	public void setChar(int index, char value){
		memory[index] = vlaue;
	}
}
